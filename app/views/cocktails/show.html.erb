<h1>Cocktail Page</h1>

<p><%= @cocktail.name %></p>

<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>

<h2>ingredients</h2>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> <%= dose.ingredient.name %> </li>

  <%= link_to "Delete dose", dose_path(dose),
    method: :delete,
    data: { confirm: 'Are you sure?'} %>

  <% end %>
</ul>


<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description %>
  <%= f.association :ingredient, collection: Ingredient.all, input_html: { class: 'select2' } %>
  <%= f.submit "add dose", class: "btn btn-primary" %>
<% end %>



<%= link_to "Delete cocktail", cocktail_path,
    method: :delete,
    data: { confirm: 'Are you sure?'} %>

<%= link_to "Back to Index", cocktails_path %>


